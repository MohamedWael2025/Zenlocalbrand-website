@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="zen-user-menu">
@if (SignInManager.IsSignedIn(User))
{
    <a id="manage" class="zen-nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        <i class="bi bi-person-circle"></i>
        <span class="zen-hidden-mobile">@UserManager.GetUserName(User)</span>
    </a>
    <form id="logoutForm" class="zen-inline-form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="zen-btn zen-btn-sm zen-btn-secondary">
            <i class="bi bi-box-arrow-right"></i>
            <span class="zen-hidden-mobile">Logout</span>
        </button>
    </form>
}
else
{
    <a class="zen-nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">
        <i class="bi bi-person-plus"></i>
        <span class="zen-hidden-mobile">Register</span>
    </a>
    <a class="zen-btn zen-btn-sm zen-btn-primary" id="login" asp-area="Identity" asp-page="/Account/Login">
        <i class="bi bi-box-arrow-in-right"></i>
        <span>Login</span>
    </a>
}
</div>
