@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="ZEN - Premium local brand e-commerce" />
    <title>@ViewData["Title"] - ZEN</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <!-- Core Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/zen-luxury.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- External Libraries -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css"/>
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    
    <!-- SweetAlert -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>
<body>
    <!-- Theme Toggle -->
    <button class="zen-theme-toggle" aria-label="Toggle theme">
        <i class="bi bi-moon-fill"></i>
    </button>

    <!-- Header -->
    <header class="zen-header">
        <div class="zen-container">
            <div class="zen-header-inner">
                <!-- Logo -->
                <a class="zen-logo" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <img src="~/images/zen-logo.svg" alt="ZEN" class="zen-logo-icon" />
                    <span>ZEN</span>
                </a>

                <!-- Navigation -->
                <nav class="zen-nav zen-hidden-mobile">
                    <a class="zen-nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i>
                        <span>Home</span>
                    </a>
                    
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <a class="zen-nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                    }
                    
                    <a class="zen-nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">
                        <i class="bi bi-box-seam"></i>
                        <span>Orders</span>
                    </a>
                    
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <a class="zen-nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">
                            <i class="bi bi-grid"></i>
                            <span>Products</span>
                        </a>
                    }
                    
                    <a class="zen-nav-link" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                        @await Component.InvokeAsync("ShoppingCart")
                    </a>
                </nav>

                <!-- Mobile Menu Button -->
                <button class="zen-mobile-menu-toggle zen-hidden-desktop" type="button" data-bs-toggle="collapse" data-bs-target="#zenMobileNav" aria-label="Toggle menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>

                <!-- User Menu -->
                <partial name="_LoginPartial" />
            </div>
        </div>

        <!-- Mobile Navigation -->
        <div class="collapse navbar-collapse zen-hidden-desktop" id="zenMobileNav">
            <div class="zen-container">
                <nav class="zen-nav zen-flex-col" style="padding: var(--zen-space-4) 0;">
                    <a class="zen-nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i>
                        <span>Home</span>
                    </a>
                    
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <a class="zen-nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                    }
                    
                    <a class="zen-nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">
                        <i class="bi bi-box-seam"></i>
                        <span>Orders</span>
                    </a>
                    
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <a class="zen-nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">
                            <i class="bi bi-grid"></i>
                            <span>Products</span>
                        </a>
                        
                        <a class="zen-nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">
                            <i class="bi bi-tags"></i>
                            <span>Categories</span>
                        </a>
                        
                        <a class="zen-nav-link" asp-area="Admin" asp-controller="User" asp-action="Index">
                            <i class="bi bi-people"></i>
                            <span>Users</span>
                        </a>
                    }
                </nav>
            </div>
        </div>
    </header>

    @if (User.Identity.IsAuthenticated)
    {
        @inject Microsoft.AspNetCore.Identity.UserManager<Microsoft.AspNetCore.Identity.IdentityUser> UserManager
        
        var currentUser = await UserManager.GetUserAsync(User) as Bulky.Models.ApplicationUser;
        if (currentUser != null && string.IsNullOrEmpty(currentUser.SecretCode))
        {
            <div class="zen-container" style="margin-top: var(--zen-space-6);">
                <div class="zen-card" style="background: var(--zen-accent-light); border-color: var(--zen-accent);">
                    <div class="zen-flex items-center zen-gap-3">
                        <i class="bi bi-exclamation-triangle-fill" style="color: var(--zen-accent); font-size: var(--zen-font-2xl);"></i>
                        <div>
                            <strong>Security Notice</strong>
                            <p style="margin: var(--zen-space-1) 0 0; color: var(--zen-text-secondary);">
                                Please set up your recovery code for account security.
                                <a href="/Identity/Account/Manage/SetSecretCode" class="zen-btn zen-btn-sm zen-btn-primary" style="margin-left: var(--zen-space-3);">
                                    Set Now
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    <!-- Main Content -->
    <main class="zen-container zen-section">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="zen-footer">
        <div class="zen-container">
            <div class="zen-footer-content">
                <p>&copy; 2026 ZEN. All rights reserved.</p>
                <p style="margin-top: var(--zen-space-2); font-size: var(--zen-font-xs);">
                    <a href="tel:+201062137061" style="color: var(--zen-text-tertiary);">+20 106 213 7061</a>
                    <span style="margin: 0 var(--zen-space-2);">·</span>
                    <a href="mailto:support@zenlocalbrand.info" style="color: var(--zen-text-tertiary);">support@zenlocalbrand.info</a>
                </p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/zen-luxury.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
