@model IEnumerable<Product>

<!-- Hero Section -->
<section class="zen-hero zen-reveal">
    <div class="zen-hero-content">
        <span class="zen-eyebrow">Premium Local Brand</span>
        <h1 class="zen-hero-title">Discover ZEN</h1>
        <p class="zen-hero-subtitle">
            Curated fashion and lifestyle products, delivered with care across Egypt
        </p>
        <div class="zen-cta-group">
            <a href="#products" class="zen-btn zen-btn-primary">
                <span>Shop Collection</span>
                <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="zen-section zen-reveal">
    <div class="zen-grid zen-grid-3">
        <div class="zen-card">
            <div class="zen-card-icon">
                <i class="bi bi-telephone-fill"></i>
            </div>
            <h3>Phone Support</h3>
            <p>
                <a href="tel:+201062137061" class="zen-link">+20 106 213 7061</a>
            </p>
        </div>
        
        <div class="zen-card">
            <div class="zen-card-icon">
                <i class="bi bi-envelope-fill"></i>
            </div>
            <h3>Email Us</h3>
            <p>
                <a href="mailto:support@zenlocalbrand.info" class="zen-link">support@zenlocalbrand.info</a>
            </p>
        </div>
        
        <div class="zen-card">
            <div class="zen-card-icon">
                <i class="bi bi-clock-fill"></i>
            </div>
            <h3>Working Hours</h3>
            <p>Daily: 10:00 AM - 10:00 PM</p>
        </div>
    </div>
</section>

<!-- Products Section -->
<section id="products" class="zen-section zen-reveal">
    <div class="zen-section-header">
        <h2>Featured Products</h2>
        <p>Discover our curated collection</p>
    </div>

    <div class="zen-grid zen-grid-3">
        @foreach (var product in Model)
        {
            <div class="zen-card zen-product-card">
                <div class="zen-card-image">
                    @if (product.ProductImages != null && product.ProductImages.Count > 0)
                    {
                        <img src="@product.ProductImages.FirstOrDefault().ImageUrl"
                             alt="@product.Title"
                             loading="lazy" />
                    }
                    else
                    {
                        <img src="https://placehold.co/500x600/1a1a1a/6366f1/png?text=ZEN"
                             alt="@product.Title"
                             loading="lazy" />
                    }
                    
                    @if (product.IsOutOfStock)
                    {
                        <span class="zen-badge zen-badge-danger">Out of Stock</span>
                    }
                    else if (product.SalePrice.HasValue && product.SalePrice.Value > 0)
                    {
                        <span class="zen-badge zen-badge-primary">Sale</span>
                    }
                </div>

                <div class="zen-card-content">
                    <h3 class="zen-card-title">@product.Title</h3>
                    <p class="zen-card-subtitle">@product.Author</p>
                    
                    @if (!string.IsNullOrEmpty(product.AvailableSizes))
                    {
                        <div class="zen-size-selector">
                            @foreach (var size in product.AvailableSizes.Split(','))
                            {
                                <span class="zen-size-chip">@size.Trim()</span>
                            }
                        </div>
                    }

                    <div class="zen-card-footer">
                        <div class="zen-price-group">
                            @if (product.IsOutOfStock)
                            {
                                <span class="zen-text-muted">Unavailable</span>
                            }
                            else if (product.SalePrice.HasValue && product.SalePrice.Value > 0)
                            {
                                <span class="zen-price-old">@product.Price.ToString("N2") EGP</span>
                                <span class="zen-price">@product.SalePrice.Value.ToString("N2") EGP</span>
                            }
                            else
                            {
                                <span class="zen-price-old">@product.ListPrice.ToString("N2") EGP</span>
                                <span class="zen-price">@product.Price.ToString("N2") EGP</span>
                            }
                        </div>
                        <a asp-action="Details"
                           asp-route-productId="@product.Id"
                           class="zen-btn zen-btn-primary @(product.IsOutOfStock ? "zen-btn-disabled" : "")">
                            <span>@(product.IsOutOfStock ? "Unavailable" : "View Details")</span>
                            @if (!product.IsOutOfStock)
                            {
                                <i class="bi bi-arrow-right"></i>
                            }
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
